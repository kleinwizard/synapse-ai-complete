# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (optional, defaults to localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=phi-3:mini-128k-instruct-q4_K_M
ENABLE_LOCAL_MODE=false

# Ollama Wrapper Configuration
OLLAMA_WRAPPER_URL=http://localhost:5001
OLLAMA_TIMEOUT=300
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# Database Configuration
# For development/testing (SQLite) - default configuration
DATABASE_URL=sqlite:///./synapse_ai.db

# For production (PostgreSQL) - uncomment and configure for production deployment
# DATABASE_URL=postgresql://user:password@localhost:5432/synapse_db

# Note: The application automatically creates database tables on startup
# SQLite database file will be created in the backend directory

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_use_a_long_random_string

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid Configuration (for transactional emails)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# CORS Configuration (for production deployment)
CORS_ORIGIN_URL=https://your-frontend-domain.vercel.app

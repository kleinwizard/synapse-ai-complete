# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/synapse_db

# JWT Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# Email Configuration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yoursynapseapp.com

# CORS Configuration
CORS_ORIGIN_URL=http://localhost:3000

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Synapse Optimization Mode (NEW - Hybrid Approach)
# Set to "true" to use local Ollama for prompt optimization (requires Ollama installation)
# Set to "false" (default) to use cloud API for prompt optimization (no local setup required)
USE_LOCAL_OLLAMA=false

# Local Ollama Configuration (only used when USE_LOCAL_OLLAMA=true)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini

# Cloud API Optimization Configuration (used when USE_LOCAL_OLLAMA=false)
CLOUD_OPTIMIZER_MODEL=gpt-4o-mini